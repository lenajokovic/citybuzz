        android:paddingHorizontal="20dp">

        <LinearLayout
            android:id="@+id/explore_event_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical" />

    </LinearLayout>

</ScrollView>